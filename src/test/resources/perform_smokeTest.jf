            writeFile file: 'test1.xml', text: 'empty'
            writeFile file: 'testLog1.log', text: 'empty'
            writeFile file: 'testTxt1.txt', text: 'empty'
        }        
        archiveArtifacts artifacts: '**', followSymlinks: false
}