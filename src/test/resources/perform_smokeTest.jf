        buildDiscarder(BuildHistoryManager(
                [
                    [
                        actions: [DeleteArtifactsWithPattern(excludePatterns: '**/*.log', includePatterns: '**')],
                        conditions: [MatchEveryBuild()]
                    ]
                ]
            )
        )
    ]
)

node {
        writeFile file: 'test.xml', text: 'empty'
